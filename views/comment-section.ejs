<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="public/css/all.min.css">
    <link rel="stylesheet" href="/public/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="/public/vendor/bootstrap/css/bootstrap.min.css">
    <script type="text/javascript" src="/public/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/public/vendor/jquery/jquery.min.js"></script>
    <link rel="stylesheet" href="/public/css/chatui.css">
    <link rel="stylesheet" href="/public/css/commented.css">
    <script src="/socket.io/socket.io.js"></script>
    
    <title>Comments</title>
</head>
<body>
   <div class="body-container">

      <div class="post-title">
        <div class="left">
           <p>All comments (10k)</p>
        </div>

        <div class="right">
          <div class="activity-icons">

            <button type="button">
              <i class="fa fa-thumbs-up"></i>
              <span>0</span>
            </button>

            <button type="button">
              <i class="fa fa-thumbs-down"></i>
              <span>0</span>
            </button>

            <button type="button">
              <i class="fa fa-share"></i>
              <span>0</span>
            </button>

          </div>
       </div>
        
      </div>

      <div class="all-comments">

          <div class="comments-area" style="margin-bottom: 6px;">

            <div class="profile-comment" >

                <div class="userProfile">
                    <img src="/public/images/member-8.png">
                    <span>Blessings Ngoma</span>
                </div>
                
                <div class="one-comment">

                  <div class="commented-post">
                      <p>Lorem ipsum dolor,Ratione aspernatur odit aut cumque laudantium eum recusandae numquam expedita.</p> 
                  </div>

                  <div class="active-actions">
                    <button type="button" class="btn btn-default" onclick="doDisLike();">
                        <i class="fa fa-thumbs-up"></i>
                        <span id="share">
                          0
                        </span>
                    </button>
                   
                    <button type="button" class="btn btn-default" onclick="doDisLike();">
                        <i class="fa fa-thumbs-down"></i>
                        <span id="share">
                          0
                        </span>
                    </button>
                    <button type="button" class="btn btn-default" onclick="doDisLike();">
                        <i class="fa fa-share"></i>
                        <span id="share">
                          0
                        </span>
                    </button>
                    <button type="button" class="btn btn-default" onclick="doDisLike();">
                        <i class="fa fa-comment"></i>
                        <span id="comment">
                          0
                        </span>
                    </button>

                    <div class="time">
                      <p> 12:59:56</p>                    
                    </div>
                    
                   </div>
                </div>
            </div>
           
        </div>

        <div class="comment-input">
            <textarea name="" id="" cols="30" rows="10"></textarea>
            <div>
              <button>Send</button>
              <button>Cancel</button>
            </div> 
        </div>
      </div>     
    
</body>
</html>