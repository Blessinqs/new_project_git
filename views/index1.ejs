<%- include("logs/logs_layouts/header.ejs")%>
<div class="contains" >
    <div class="row my-4">
        <div class="col-md-12">
            
            <div class="logs" style="background-color: rgb(238, 237, 237);">
                <a href="/login" style="font-size: 20px; color: white; border-top-right-radius:6px ; border-top-left-radius: 6px; background-color: rgb(70, 90, 180); padding-right: 5px; padding-left: 5px;">Login</a>
                <a href="/signup" style="font-size: 20px; color: white; border-top-right-radius:6px ; border-top-left-radius: 6px; background-color: rgb(70, 90, 180);  padding-right: 5px; padding-left: 5px;"> Signup</a>
           </div>

            <form action="/login" method="POST" style="border-top: 2px rgb(68, 77, 196) solid;">
                <div class="form-group">
                    <label>Email</label> 
                    <input type="email" name="email" class="form-control" required placeholder="email">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" name="password" class="form-control" required placeholder="password">
                </div>
                <input type="submit" class="btn btn-block btn-primary" value="Login" style="background-color: rgb(70, 90, 180);">
            </form>
        </div>
    </div>
</div>
<%- include("logs/logs_layouts/footer.ejs")%>